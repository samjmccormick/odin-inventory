<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('trainerSideBar/trainerSidebar', {trainers: trainers}) %>
    <div class="container main">
      <form
        id="update-trainer"
        method="post"
        action="/trainers/<%= trainer.id %>/update"
        class="d-flex flex-column"
      >
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= trainer.name %>" />
        <label for="age">Age:</label>
        <input
          type="number"
          id="age"
          name="age"
          value="<%= trainer.age %>"
          required
        />
        <label for="hometown">Hometown:</label>
        <input
          type="text"
          id="hometown"
          name="hometown"
          value="<%= trainer.hometown %>"
          required
        />
        <label for="pokemon1">Pokemon 1:</label>
        <input
          type="text"
          id="pokemon1"
          name="pokemon1"
          value="<%= trainer.pokemon1 %>"
        />
        <label for="pokemon2">Pokemon 2:</label>
        <input
          type="text"
          id="pokemon2"
          name="pokemon2"
          value="<%= trainer.pokemon2 %>"
        />
        <label for="pokemon3">Pokemon 3:</label>
        <input
          type="text"
          id="pokemon3"
          name="pokemon3"
          value="<%= trainer.pokemon3 %>"
        />
        <label for="pokemon4">Pokemon 4:</label>
        <input
          type="text"
          id="pokemon4"
          name="pokemon4"
          value="<%= trainer.pokemon4 %>"
        />
        <label for="pokemon5">Pokemon 5:</label>
        <input
          type="text"
          id="pokemon5"
          name="pokemon5"
          value="<%= trainer.pokemon5 %>"
        />
        <label for="pokemon6">Pokemon 6:</label>
        <input
          type="text"
          id="pokemon6"
          name="pokemon6"
          value="<%= trainer.pokemon6 %>"
        />
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
